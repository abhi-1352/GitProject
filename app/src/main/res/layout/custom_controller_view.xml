<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#45000000"

    android:id="@+id/rootLayout">
    #00252323

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/exo_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_round_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_title"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="this is title"
            android:layout_marginEnd="10dp"
            android:paddingLeft="10dp"

            android:layout_alignParentStart="false"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_list"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/video_more"
            android:src="@drawable/ic_round_playlist_play"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/video_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_round_more_vert"
            app:tint="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/whatever">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exo_position"
            android:textColor="#fff"
            android:text="1111"
            android:layout_marginEnd="10dp"
            android:paddingLeft="10dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"


            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="1111"
            android:textColor="#fff" />

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="60dp"
            android:layout_toStartOf="@id/exo_duration"
            android:layout_toEndOf="@id/exo_position"
            app:played_color="#3F51B5"
            app:unplayed_color="#FFFFFF" />



        <LinearLayout
            android:id="@+id/rellay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/exo_lock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"

                android:src="@drawable/ic_round_lock"
                app:tint="@color/white" />
            <ImageView
                android:id="@+id/exo_unlock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"

                android:src="@drawable/ic_round_lock_open"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_prev"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/exo_icon_previous"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_rew"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_replay"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_play_arrow"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_pause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_pause"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_ffwd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_forward"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/exo_icon_next"
                app:tint="@color/white" />



        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>