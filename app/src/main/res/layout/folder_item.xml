<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B5000000"
    android:layout_marginTop="30dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/folderImage"
        android:src="@drawable/ic_baseline_folder"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/count_files_folder"
        android:textAlignment="center"
        android:background="@drawable/background_drw"
        android:layout_marginStart="-30dp"
        android:layout_toEndOf="@+id/folderImage"
        android:layout_alignBottom="@+id/folderImage"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/folderName"
        android:layout_toEndOf="@id/folderImage"
        android:text="Folder Name"
        android:textColor="#FFFFFF"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>